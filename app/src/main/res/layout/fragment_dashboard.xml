<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/averageCal"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Average Calories:"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/avgCalTv"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/avgCalTv"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="76dp"
            android:gravity="center"
            android:text="000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/minCal"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Minimum Calories:"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/minCalTv"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/averageCal" />

        <TextView
            android:id="@+id/minCalTv"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="76dp"
            android:gravity="center"
            android:text="000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avgCalTv" />

        <TextView
            android:id="@+id/maxCal"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Maximum Calories:"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/maxCalTv"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/minCal" />

        <TextView
            android:id="@+id/maxCalTv"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="76dp"
            android:gravity="center"
            android:text="000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/minCalTv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>